UIListLayout.Padding = UDim.new(0, 5)
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Parent = scrollFrame

local UIPadding = Instance.new("UIPadding")
UIPadding.PaddingTop = UDim.new(0, 10)
UIPadding.PaddingRight = UDim.new(0, 10)
UIPadding.PaddingLeft = UDim.new(0, 10)
UIPadding.Parent = scrollFrame

-- دالة لإضافة عنصر للقائمة
local function addToScrollFrame(text)
    local itemFrame = Instance.new("Frame")
    itemFrame.Name = "Item"
    itemFrame.Size = UDim2.new(1, -20, 0, 40)
    itemFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    itemFrame.BorderSizePixel = 0
    itemFrame.LayoutOrder = #scrollFrame:GetChildren()
    
    local itemLabel = Instance.new("TextLabel")
    itemLabel.Name = "Text"
    itemLabel.Size = UDim2.new(1, -10, 1, 0)
    itemLabel.Position = UDim2.new(0, 5, 0, 0)
    itemLabel.BackgroundTransparency = 1
    itemLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    itemLabel.Text = text
    itemLabel.Font = Enum.Font.Gotham
    itemLabel.TextSize = 16
    itemLabel.TextXAlignment = Enum.TextXAlignment.Right
    itemLabel.TextWrapped = true
    itemLabel.Parent = itemFrame
    
    itemFrame.Parent = scrollFrame
    
    -- تحديث حجم CanvasSize
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, UIListLayout.AbsoluteContentSize.Y + 20)
    
    return itemFrame
end

-- دالة لتغيير لون الإطار كل ثانية
local function startColorAnimation()
    local colors = {
        Color3.fromRGB(255, 0, 0),    -- أحمر
        Color3.fromRGB(0, 255, 0),    -- أخضر
        Color3.fromRGB(0, 0, 255),    -- أزرق
        Color3.fromRGB(255, 255, 0),  -- أصفر
        Color3.fromRGB(255, 0, 255),  -- أرجواني
        Color3.fromRGB(0, 255, 255)   -- سماوي
    }
    
    local currentIndex = 1
    
    while true do
        colorFrame.BackgroundColor3 = colors[currentIndex]
        
        currentIndex = currentIndex + 1
        if currentIndex > #colors then
            currentIndex = 1
        end
        
        wait(1) -- تغيير اللون كل ثانية
    end
end

-- دالة لإرسال الرسالة للجميع
local function sendMessageToAll(message)
    if message == "" then
        return
    end
    
    -- إضافة الرسالة للقائمة المحلية
    addToScrollFrame(player.Name .. ": " .. message)
    
    -- هنا يمكنك إضافة كود لإرسال الرسالة للاعبين الآخرين
    -- مثال باستخدام RemoteEvent:
    -- game.ReplicatedStorage.SendMessage:FireServer(message)
    
    -- عرض في الشات (للتجربة فقط)
    game.StarterGui:SetCore("ChatMakeSystemMessage", {
        Text = player.Name .. ": " .. message,
        Color = Color3.fromRGB(0, 200, 255),
        Font = Enum.Font.Gotham,
        TextSize = 18
    })
    
    -- مسح حقل الإدخال
    inputBox.Text = ""
end

-- دالة لتحريك الزر
local function makeButtonDraggable(button)
    local dragging = false
    local dragInput, dragStart, startPos
    
    local function update(input)
        local delta = input.Position - dragStart
        button.Position = UDim2.new(
            startPos.X.Scale, 
            startPos.X.Offset + delta.X, 
            startPos.Y.Scale, 
            startPos.Y.Offset + delta.Y
        )
    end
    
    button.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = button.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    button.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input == dragInput then
            update(input)
        end
    end)
end

-- إضافة ظلال وتحسينات بصرية
local function addVisualEffects()
    -- ظل للزر الرئيسي
    local buttonShadow = Instance.new("UIStroke")
    buttonShadow.Color = Color3.fromRGB(0, 0, 0)
    buttonShadow.Thickness = 2
    buttonShadow.Transparency = 0.5
    buttonShadow.Parent = mainButton
    
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 10)
    buttonCorner.Parent = mainButton
    
    -- ظل للإطار الرئيسي
    local frameShadow = Instance.new("UIStroke")
    frameShadow.Color = Color3.fromRGB(0, 0, 0)
    frameShadow.Thickness = 3
    frameShadow.Transparency = 0.3
    frameShadow.Parent = mainFrame
    
    local frameCorner = Instance.new("UICorner")
    frameCorner.CornerRadius = UDim.new(0, 15)
    frameCorner.Parent = mainFrame
    
    -- زوايا دائرية لعناصر أخرى
    local elements = {inputBox, sendButton, colorFrame, scrollFrame}
    for _, element in ipairs(elements) do
        local corner = Instance.new("UICorner")
        corner.CornerRadius = UDim.new(0, 8)
        corner.Parent = element
    end
    
    -- تأثير hover للزر الرئيسي
    mainButton.MouseEnter:Connect(function()
        TweenService:Create(mainButton, TweenInfo.new(0.2), {
            BackgroundColor3 = Color3.fromRGB(40, 40, 40),
            Size = UDim2.new(0, 55, 0, 55)
        }):Play()
    end)
    
    mainButton.MouseLeave:Connect(function()
        TweenService:Create(mainButton, TweenInfo.new(0.2), {
            BackgroundColor3 = Color3.fromRGB(25, 25, 25),
            Size = UDim2.new(0, 50, 0, 50)
        }):Play()
    end)
end

-- إضافة بعض العناصر الافتراضية للقائمة
local function addDefaultItems()
    addToScrollFrame("مرحبًا! هذه قائمة الرسائل")
    addToScrollFrame("يمكنك كتابة رسالة وإرسالها للجميع")
    addToScrollFrame("الرسائل تظهر هنا")
end

-- تهيئة الواجهة
makeButtonDraggable(mainButton)
addVisualEffects()
addDefaultItems()

-- تشغيل رسوميات الألوان
coroutine.wrap(startColorAnimation)()

-- أحداث الأزرار
mainButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
    
    if mainFrame.Visible then
        -- تأثير ظهور
        mainFrame.BackgroundTransparency = 1
        TweenService:Create(mainFrame, TweenInfo.new(0.3), {
            BackgroundTransparency = 0
        }):Play()
    end
end)

closeButton.MouseButton1Click:Connect(function()
    TweenService:Create(mainFrame, TweenInfo.new(0.3), {
        BackgroundTransparency = 1
    }):Play()
    
    wait(0.3)
    mainFrame.Visible = false
    mainFrame.BackgroundTransparency = 0
end)

sendButton.MouseButton1Click:Connect(function()
    local message = inputBox.Text
    sendMessageToAll(message)
end)

inputBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        local message = inputBox.Text
        sendMessageToAll(message)
    end
end)

-- حماية من الإدخال الطويل
inputBox:GetPropertyChangedSignal("Text"):Connect(function()
    if #inputBox.Text > 100 then
        inputBox.Text = string.sub(inputBox.Text, 1, 100)
    end
end)

print("✅ سكريبت الواجهة العربية جاهز للاستخدام!")
